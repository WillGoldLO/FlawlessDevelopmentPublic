    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("updateMetaTags", new
            {
                Title = "Flawless Development - Services",
                Description = "Explore our range of services including software development, cloud architecture, and compliance solutions.",
                Keywords = "software development, cloud architecture, compliance, Azure, DevOps",
                Author = "Flawless Development",
                Canonical = "https://flawless-development.com/contact"
            });
        }
    }
}